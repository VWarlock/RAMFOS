init:		; Включение ОЗУ
		sta	IO_PAGE_RAM
	
		; Инициализация	стека
		lxi	sp, STACK_TOP

		; Инициализация BIOS
		call	j_biosInit

		; Верхушка памяти
		lxi	h, RAM_TOP
		call	j_setMemTop

		; Фильтр
		lxi	h, a_12spaces + 9
		call	fileSetType

		; Диск
		mvi	b, DLG_START_PAGE

		; Продолжается в dlg_main