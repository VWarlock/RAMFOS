; RAMFOS
; Ожидание нажатия клавиши с курсором
;
; 2013-11-01 Дизассемблировано vinxru
;----------------------------------------------------------------------------

keyWait:	push	h
		push	d
		push	b
		 ; Нажата ли клавиша
		 call	keyCheck
		 ; Если клавиша не нажата, мигаем курсором, пока не нажмут
		 cz	keyCursor
		 ; Сбрасыаем флаг v_key2
		 xra	a
		 sta	v_key2
		 ; Нажатая клавиша в v_key1
		 lda	v_key1
		pop	b		
popa_ora_a_ret:	pop	d
loc_CE8A:	pop	h
ora_a_ret:	ora	a
		ret
